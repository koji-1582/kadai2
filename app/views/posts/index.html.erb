<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
　　　<h1>投稿一覧</h1>
       <%= link_to "投稿", new_post_path, class: 'btn btn-default' %>
     <div class="row">
　　　　<% @posts.each do |post| %>
      <p><strong><%= post.user.name if post.user %></strong></p>
      <div class="avatar"><%= profile_img(post.user) %></div>
  　　　<p>本文:<%= post.content %></p>
  　　　<%= link_to "編集", edit_post_path(post.id), class: 'btn btn-default btn-sm btn-success' %>
  　　　<%= link_to "削除", post_path(post.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger'  %>
     </div>
     <% end %><br>
     <p> </p>
     <%= link_to "トップにもどる", root_path , class:  'btn btn-default btn-sm btn-default'%>
　</div>
</div>
